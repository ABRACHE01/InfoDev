
    <h1>edite Article</h1>
    <form method="POST"  action="/article/edite/<%= article.id %>?_method=PUT"  enctype="multipart/form-data" >

        <input type="hidden" id="authorId" name="authorId" value="1"><br>
 
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" value="<%= article.title %>" ><br>

        <label for="content">Content:</label>
        <textarea id="content" name="content" ><%= article.content %></textarea><br>
                
        <label for="photo">Photo:</label>
        <input type="file" id="photo" name="photo" accept="image/*" ><br>
        <img src="/uploads/<%= article.photo %>" width="100px" height="100px" alt="">
        <button type="submit">Submit</button>
    </form>


