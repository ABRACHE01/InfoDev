<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Article List</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.1/flowbite.min.css"  rel="stylesheet" />
</head>

<body>
    <h1><a href="/article/add">add article</a></h1>
    <h1>Article List</h1>
    <ul>
        <% articles.forEach((article) => { %>
            <li>
                <img src="../uploads/<%= article.photo %>" width="100px" height="100px" alt="">
                <h2><%= article.title %></h2>
                <p><%= article.content %></p>
                <p><%= article.publishDate %></p>
                <p><%= article.author.fullName %></p>

                <form method="POST" action="/article/<%= article.id %>?_method=DELETE" style="display: inline;">
                    <button type="submit">Delete</button>
                    <a href="/articles/<%= article.id %>">show</a>
                    <a href="/article/edite/<%= article.id %>">edite</a>
                </form>
                
                <div  class="comments-body bg-pink-100 w-1/2 p-3 rounded mx-4">
                        <ul>
                            <p class="text-x font-bold">Comments</p>
                            <% article.comments.forEach((comment) => { %>
                              <li>
                                <p id="comment-<%= comment.id %>" class="bg-pink-200 rounded p-3 my-2"><%= comment.content %></p>
                                <form id="update-form-<%= comment.id %>" method="POST" action="/update-comment/<%= comment.id %>?_method=PUT" style="display: none;">
                                    <input type="text" name="content" value="<%= comment.content %>">
                                    <button type="submit" class="bg-red-200">Save</button>
                                </form>

                                <!-- Display other comment properties as needed -->
                                <div class="flex space-x-4 mb-6">
                                    <form
                                        method="POST"
                                        action="/delete-comment/<%= comment.id %>?_method=DELETE"
                                        onsubmit="console.log('Form submitted');"
                                    >
                                        <button type="submit" class="bg-red-700 text-white p-2 rounded">Delete</button>
                                    </form>
                                    <button onclick="displayFormUpdate('<%= comment.id %>')" class="bg-blue-700 text-white p-2 rounded">Edit</button>
                                </div>

                                
                              </li>
                              <% }) %>
                              <form action="/create-comment" method="POST">
                                  <div>
                                    <div>
                                        <label for="content" class="text-x font-bold">Add comments</label>
                                    </div>
                                  <textarea id="content" name="content" class="w-full text-sm rounded-lg border border-gray-300 focus:border-blue-500 mt-3" placeholder="Write somethings ..." required></textarea>
                                  </div>
                                  <div>
                                  <input type="hidden" id="authorId" name="authorId" value="1" required>
                                  </div>
                                  <div>
                                  <input type="hidden" id="articleId" name="articleId" value="<%= article.id %>" required>
                                  </div>
                                  <button type="submit">Submit</button>
                              </form>
                          </ul>
                </div>
            </li>
            <hr />
        <% }) %>
    </ul>

    <script>
        const displayFormUpdate = (commentId) => {
            const updateForm = document.getElementById(`update-form-${commentId}`);
            updateForm.style.display = "block";
            const commentContent = document.getElementById(`comment-${commentId}`);
            commentContent.style.display = "none";
        }
     </script>
     <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.1/flowbite.min.js"></script>
</body>
</html>